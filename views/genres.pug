extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="relative bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-700 dark:to-blue-900 rounded-2xl p-8 md:p-12 mb-8 text-white shadow-lg overflow-hidden")
      div(class="absolute inset-0 bg-black/20")
      div(class="relative z-10")
        h1(class="text-3xl md:text-4xl font-bold mb-2") Anime Genres
        p(class="text-lg opacity-90") Explore anime by your favorite genres.

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-4")
        if genres && genres.length > 0
          div(class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 mb-8")
            each genre in genres
              a(href=`/genres/${genre.slug}` class="group flex items-center justify-center bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg dark:shadow-gray-900/50 p-4 transition-all duration-300 hover:bg-primary-500 hover:text-white text-center border border-gray-100 dark:border-gray-700")
                h3(class="font-semibold text-gray-900 dark:text-gray-100 group-hover:text-white transition-colors duration-200")= genre.name
        else
          div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
            p(class="text-xl font-medium text-gray-900 dark:text-gray-100") No genres found.