extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-700 dark:to-blue-900 rounded-2xl p-8 md:p-12 mb-8 text-white shadow-lg")
      h1(class="text-3xl md:text-4xl font-bold mb-2") Anime Genres
      p(class="text-lg opacity-90") Explore anime by your favorite genres.

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-4")
        if genres && genres.length > 0
          div(class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-8")
            each genre in genres
              a(href=`/genres/${genre.slug}` class="group relative flex items-center justify-center bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl dark:shadow-gray-900/50 p-4 transition-all duration-300 hover:scale-105 text-center border border-gray-100 dark:border-gray-700 aspect-video overflow-hidden")
                div(class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent z-10")
                img(src=`https://source.unsplash.com/random/400x225?anime,${genre.name}` alt=genre.name class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110")
                h3(class="relative z-20 font-bold text-white text-lg drop-shadow-lg")= genre.name
        else
          div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
            p(class="text-xl font-medium text-gray-900 dark:text-gray-100") No genres found.