extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-700 dark:to-blue-900 rounded-2xl p-8 md:p-12 mb-8 text-white shadow-lg")
      h1(class="text-3xl md:text-4xl font-bold mb-2") Genre: #{genreName}
      p(class="text-lg opacity-90") Daftar anime dengan genre #{genreName}.

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if animeList && animeList.length > 0
          div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-8")
            each anime in animeList
              include ./_partials/anime-card.pug

          if pagination && pagination.last_visible_page > 1
            include ./_partials/pagination.pug
        else
          div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
            p(class="text-xl font-medium text-gray-900 dark:text-gray-100") No anime found in this genre.

      div(class="lg:col-span-1")
        include ./_partials/sidebar.pug