nav(class="flex justify-center")
  ul(class="flex items-center -space-x-px h-10 text-base")
    if pagination.current_page > 1
      li
        a(href=`?page=${pagination.current_page - 1}` class="flex items-center justify-center px-4 h-10 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white")
          span(class="sr-only") Previous
          svg(class="w-3 h-3 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10")
            path(stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4")

    - const maxPages = 5
    - let startPage = Math.max(1, pagination.current_page - Math.floor(maxPages / 2))
    - let endPage = Math.min(pagination.last_visible_page, startPage + maxPages - 1)
    - if (endPage - startPage + 1 < maxPages) startPage = Math.max(1, endPage - maxPages + 1)

    each page in Array.from({length: endPage - startPage + 1}, (_, i) => startPage + i)
      li
        a(href=`?page=${page}` class=`flex items-center justify-center px-4 h-10 leading-tight ${page === pagination.current_page ? 'text-primary-600 border border-primary-300 bg-primary-50 hover:bg-primary-100 hover:text-primary-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white' : 'text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white'}`)= page

    if pagination.current_page < pagination.last_visible_page
      li
        a(href=`?page=${pagination.current_page + 1}` class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white")
          span(class="sr-only") Next
          svg(class="w-3 h-3 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10")
            path(stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4")