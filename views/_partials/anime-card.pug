a(href=`/anime/${anime.slug}` class="group")
  div(class="relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300")
    img(src=anime.poster alt=anime.title class="w-full h-72 object-cover" onerror="this.closest('a').style.display='none'")
    div(class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent")
    div(class="absolute top-3 left-3")
      if anime.current_episode
        span(class="bg-primary-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg") Ongoing
      else
        span(class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg") Complete
    div(class="absolute bottom-0 left-0 right-0 p-4")
      h3(class="font-bold text-lg text-white line-clamp-2")= anime.title
      div(class="flex items-center justify-between text-xs text-gray-300 mt-1")
        span= anime.release_day || (anime.total_episodes ? `${anime.total_episodes} Episodes` : '')
        if anime.rating
          div(class="flex items-center")
            svg(class="w-4 h-4 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
              path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
            span= anime.rating