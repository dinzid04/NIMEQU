doctype html
html(lang="id" class="scroll-smooth")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= "COMICKU - Baca Manhwa Gratis"
    link(rel="icon" href="/images/favicon.ico")
    link(rel="stylesheet" href="https://cdn.tailwindcss.com/3.4.17")
    link(rel="stylesheet", href="/css/comic.css")
    style.
      /* Custom styles for smaller, more aesthetic buttons */
      .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 0.5rem;
        transition: all 0.2s;
        outline: none;
      }
      
      .btn:focus {
        ring-width: 2px;
        ring-offset-width: 2px;
      }
      
      .btn-primary {
        background-color: #8b5cf6;
        color: white;
      }
      
      .btn-primary:hover {
        background-color: #7c3aed;
      }
      
      .btn-primary:focus {
        ring-color: #8b5cf6;
      }
      
      .btn-secondary {
        background-color: #e5e7eb;
        color: #1f2937;
      }
      
      .dark .btn-secondary {
        background-color: #374151;
        color: #e5e7eb;
      }
      
      .btn-secondary:hover {
        background-color: #d1d5db;
      }
      
      .dark .btn-secondary:hover {
        background-color: #4b5563;
      }
      
      .btn-secondary:focus {
        ring-color: #6b7280;
      }
      
      .search-input {
        width: 100%;
        padding: 0.375rem 0.75rem;
        padding-left: 2.25rem;
        padding-right: 1rem;
        border: 1px solid #d1d5db;
        border-radius: 0.5rem;
        background-color: white;
        color: #111827;
        font-size: 0.875rem;
        transition: all 0.2s;
      }
      
      .dark .search-input {
        border-color: #4b5563;
        background-color: #374151;
        color: #f9fafb;
      }
      
      .search-input:focus {
        ring-width: 2px;
        ring-color: #8b5cf6;
        border-color: transparent;
      }
      
      .section-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
      }
      
      .section-title h2 {
        font-size: 1.25rem;
        font-weight: bold;
      }
      
      .slider-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border-radius: 9999px;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        transition: all 0.2s;
        z-index: 10;
      }
      
      .slider-nav:hover {
        background-color: rgba(0, 0, 0, 0.7);
      }
      
      .slider-prev {
        left: 0.5rem;
      }
      
      .slider-next {
        right: 0.5rem;
      }
      
      .view-all {
        font-size: 0.75rem;
        font-weight: 500;
        color: #7c3aed;
        transition: color 0.2s;
      }
      
      .dark .view-all {
        color: #a78bfa;
      }
      
      .view-all:hover {
        color: #5b21b6;
      }
      
      .dark .view-all:hover {
        color: #ddd6fe;
      }
      
      /* Skeleton loading styles */
      .skeleton {
        background-color: #e5e7eb;
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        border-radius: 0.375rem;
      }
      
      .dark .skeleton {
        background-color: #374151;
      }
      
      .skeleton-slide {
        height: 16rem;
        width: 100%;
      }
      
      .skeleton-card {
        height: 18rem;
        width: 100%;
      }
      
      /* Slider styles */
      .slider-container {
        display: flex;
        transition: transform 0.5s ease-in-out;
      }
      
      .slide {
        flex-shrink: 0;
        width: 100%;
        position: relative;
      }
      
      .slide img {
        width: 100%;
        height: 16rem;
        object-fit: cover;
        border-radius: 0.5rem;
      }
      
      .slide-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
        padding: 1rem;
        color: white;
        border-bottom-left-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
      }
      
      .slide-title {
        font-size: 1.125rem;
        font-weight: bold;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      
      .slide-info {
        display: flex;
        justify-content: space-between;
        font-size: 0.875rem;
        margin-top: 0.25rem;
      }
      
      /* Card styles */
      .anime-card {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transform: translateY(0);
        transition: all 0.3s;
      }
      
      .dark .anime-card {
        background-color: #374151;
      }
      
      .anime-card:hover {
        transform: translateY(-0.25rem);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }
      
      /* Detail page styles */
      .detail-header {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
      }
      
      @media (min-width: 768px) {
        .detail-header {
          flex-direction: row;
        }
      }
      
      .detail-cover {
        width: 100%;
      }
      
      @media (min-width: 768px) {
        .detail-cover {
          width: 33.333333%;
        }
      }
      
      .detail-cover img {
        width: 100%;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }
      
      .detail-info {
        width: 100%;
      }
      
      @media (min-width: 768px) {
        .detail-info {
          width: 66.666667%;
        }
      }
      
      .detail-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
      }
      
      .detail-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        color: #6b7280;
      }
      
      .dark .detail-meta {
        color: #9ca3af;
      }
      
      .detail-genres {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }
      
      .genre-tag {
        background-color: #ede9fe;
        color: #5b21b6;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
      }
      
      .dark .genre-tag {
        background-color: #4c1d95;
        color: #ddd6fe;
      }
      
      .detail-synopsis {
        margin-bottom: 1.5rem;
      }
      
      .detail-synopsis p {
        color: #374151;
        line-height: 1.625;
      }
      
      .dark .detail-synopsis p {
        color: #d1d5db;
      }
      
      .detail-actions {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1rem;
      }
      
      .chapters-list {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 1rem;
      }
      
      .dark .chapters-list {
        background-color: #374151;
      }
      
      .chapters-header {
        font-size: 1.125rem;
        font-weight: bold;
        margin-bottom: 1rem;
      }
      
      .chapter-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        border-bottom: 1px solid #e5e7eb;
        cursor: pointer;
        transition: background-color 0.2s;
      }
      
      .dark .chapter-item {
        border-bottom-color: #4b5563;
      }
      
      .chapter-item:hover {
        background-color: #f9fafb;
      }
      
      .dark .chapter-item:hover {
        background-color: #4b5563;
      }
      
      .chapter-date {
        font-size: 0.875rem;
        color: #6b7280;
      }
      
      .dark .chapter-date {
        color: #9ca3af;
      }
      
      /* Reader styles */
      .reader-container {
        max-width: 56rem;
        margin-left: auto;
        margin-right: auto;
      }
      
      .reader-header {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        gap: 1rem;
      }
      
      @media (min-width: 640px) {
        .reader-header {
          flex-direction: row;
        }
      }
      
      .reader-title {
        font-size: 1.25rem;
        font-weight: bold;
        text-align: center;
      }
      
      @media (min-width: 640px) {
        .reader-title {
          text-align: left;
        }
      }
      
      .reader-nav {
        display: flex;
        gap: 0.5rem;
      }
      
      .reader-content {
        background-color: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 1rem;
      }
      
      .dark .reader-content {
        background-color: #374151;
      }
      
      .reader-image {
        width: 100%;
        margin-bottom: 1rem;
        border-radius: 0.375rem;
      }
      
      /* Error state */
      .error-state {
        text-align: center;
        padding: 3rem 0;
      }
      
      .error-icon {
        font-size: 2.25rem;
        margin-bottom: 1rem;
      }
      
      .error-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
      }
      
      .error-message {
        color: #6b7280;
        margin-bottom: 1rem;
      }
      
      .dark .error-message {
        color: #9ca3af;
      }

    script.
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: { 50: '#f5f3ff', 100: '#ede9fe', 200: '#ddd6fe', 300: '#c4b5fd', 400: '#a78bfa', 500: '#8b5cf6', 600: '#7c3aed', 700: '#6d28d9', 800: '#5b21b6', 900: '#4c1d95' }
            },
            fontFamily: { 'sans': ['Inter', 'system-ui', 'sans-serif'] }
          }
        }
      }

  body(class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-sans")
    header(class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50 rounded-b-lg")
      nav(class="container mx-auto px-8 py-3")
        div(class="flex items-center justify-between")
          a(href="/" class="flex items-center")
            img(src="/images/logo.png" alt="ANIMAQU" class="h-7 w-auto rounded-sm")
            span(class="ml-2 text-lg font-bold text-gray-800 dark:text-white") ANIMAQU

          //- Search Bar for Comic Page
          div(class="flex-1 max-w-md mx-4 relative")
