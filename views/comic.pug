              svg(id="moonIcon" class="theme-icon text-gray-300 hidden" fill="currentColor" viewBox="0 0 20 20")
                path(d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z")

    // Main Content
    main(class="min-h-screen pt-16")
      div(class="container mx-auto px-4 py-6")
        // Home Page
        #homePage
          // Slider Section
          section.slider
            #sliderContainer.slider-container
            button#sliderPrev.slider-nav.slider-prev ❮
            button#sliderNext.slider-nav.slider-next ❯

          // Latest Updates Section
          section.section
            .section-header
              h2.section-title 📖 Terbaru
              a.section-more(href="#", onclick="navigateToPage('latest'); return false;") Lihat Semua
            #latestGrid.comic-grid

          // Popular Section
          section.section
            .section-header
              h2.section-title 🔥 Populer
              a.section-more(href="#", onclick="navigateToPage('popular'); return false;") Lihat Semua
            #popularGrid.comic-grid

          // Top Rated Section
          section.section
            .section-header
              h2.section-title 🏆 Top Rated
              a.section-more(href="#", onclick="navigateToPage('top-weekly'); return false;") Lihat Semua
            #topRatedGrid.comic-grid

        // Search Page
        #searchPage(style="display: none;")
          .section-header
            h1.section-title Hasil Pencarian
          #searchInfo.mb-4.text-sm.text-gray-600.dark:text-gray-400
          #searchGrid.comic-grid

        // Detail Page
        #detailPage(style="display: none;")
          .detail-container

        // Reader Page
        #readerPage(style="display: none;")
          .reader-container
            .section-header
              #readerTitle.section-title
              .flex.space-x-2
