doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title COMICKU - Baca Manhwa Gratis
    link(rel="stylesheet", href="/css/comic.css")

  body
    // Header
    header
      .container
        .header-content
          .logo
            a(href="#") COMICKU
          .search-container
            input.search-input(type="text", placeholder="Cari manhwa...")
          .header-actions
            button#themeToggle.theme-toggle üåô
            button#menuToggle.menu-toggle ‚ò∞

    // Navigation
    nav
      .container
        ul#navLinks.nav-links
          li: a(href="#", onclick="navigateToPage('home'); return false;") Beranda
          li: a(href="#", onclick="navigateToPage('popular'); return false;") Populer
          li: a(href="#", onclick="navigateToPage('latest'); return false;") Terbaru
          li: a(href="#", onclick="navigateToPage('recommendations'); return false;") Rekomendasi
          li: a(href="#", onclick="navigateToPage('top-weekly'); return false;") Top Mingguan

    // Main Content
    main
      .container
        // Home Page Content
        #homePage
          // Slider/Banner
          section.slider
            #sliderContainer.slider-container
              // Slider items will be populated by JavaScript
            button#sliderPrev.slider-nav.slider-prev ‚ùÆ
            button#sliderNext.slider-nav.slider-next ‚ùØ

          // Latest Updates
          section
            .section-title
              h2 üìñ Terbaru
              a.view-all(href="#", onclick="navigateToPage('latest'); return false;") Lihat Semua
            #latestGrid.grid
              // Latest items will be populated by JavaScript

          // Popular
          section
            .section-title
              h2 üî• Populer
              a.view-all(href="#", onclick="navigateToPage('popular'); return false;") Lihat Semua
            #popularGrid.grid
              // Popular items will be populated by JavaScript

          // Top Rated
          section
            .section-title
              h2 üèÜ Top Rated
              a.view-all(href="#", onclick="navigateToPage('top-weekly'); return false;") Lihat Semua
            #topRatedGrid.grid
              // Top rated items will be populated by JavaScript

        // Search Page Content
        #searchPage(style="display: none;")
          h1 Hasil Pencarian
          #searchInfo.search-info
          #searchGrid.grid
            // Search results will be populated by JavaScript

        // Detail Page Content
        #detailPage(style="display:none;")
            .detail-container
                // Detail content will be populated by JavaScript

        // Chapter Reader Content
        #readerPage(style="display: none;")
            .reader-container
                .reader-header
                    #readerTitle.reader-title
                    .reader-nav
                        button#prevChapter.btn.btn-secondary ‚ùÆ Previous Chapter
                        button#nextChapter.btn.btn-secondary Next Chapter ‚ùØ
                #readerContent.reader-content
                    // Chapter images will be populated by JavaScript

    // Footer
    footer
      .container
        .footer-content
          .logo COMICKU
          .footer-links
            a(href="#", onclick="navigateToPage('home'); return false;") Beranda
            a(href="#", onclick="navigateToPage('popular'); return false;") Populer
            a(href="#", onclick="navigateToPage('latest'); return false;") Terbaru
            a(href="#", onclick="navigateToPage('recommendations'); return false;") Rekomendasi
            a(href="#", onclick="navigateToPage('top-weekly'); return false;") Top Mingguan
