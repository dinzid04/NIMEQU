extends layout

block content
  - const sliderAnime = ongoingAnime && ongoingAnime.length > 2 ? ongoingAnime.slice(0, 3) : []

  if sliderAnime.length > 0
    section(class="swiper hero-slider")
      div(class="swiper-wrapper")
        each anime in sliderAnime
          div(class="swiper-slide relative h-96 md:h-[520px] bg-cover bg-center text-white" style=`background-image: url('${anime.poster}')`)
            div(class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/60 to-transparent")
            div(class="absolute inset-0 bg-gradient-to-r from-gray-900/70 to-transparent")
            div(class="container mx-auto px-4 relative z-10 flex flex-col justify-end h-full pb-16")
              div(class="max-w-xl")
                h1(class="text-4xl md:text-5xl font-bold mb-3 opacity-0 animate-fade-in-up")= anime.title
                div(class="flex items-center space-x-4 mb-4 text-sm opacity-0 animate-fade-in-up animation-delay-200")
                  span= anime.current_episode
                  span &bull;
                  span= anime.release_day
                p(class="text-gray-200 line-clamp-3 mb-6 opacity-0 animate-fade-in-up animation-delay-400")= "Temukan berbagai macam anime terbaru dan terpopuler dengan subtitle Indonesia hanya di ANIMAQU."
                a(href=`/anime/${anime.slug}` class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors font-semibold inline-flex items-center space-x-2 opacity-0 animate-fade-in-up animation-delay-600")
                  svg(class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20")
                    path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd")
                  span Tonton Sekarang
      div(class="swiper-pagination")
      div(class="swiper-button-prev")
      div(class="swiper-button-next")

  else
    div(class="container mx-auto px-4 py-8")
      div(class="max-w-2xl mx-auto text-center")
        h1(class="text-4xl md:text-5xl font-bold mb-4") Selamat Datang di ANIMAQU
        p(class="text-lg text-gray-600 dark:text-gray-300 mb-6") Platform streaming anime subtitle Indonesia terlengkap. Nikmati ribuan anime berkualitas tinggi dengan subtitle Indonesia yang akurat.

  div(class="container mx-auto px-4 py-8")
    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if ongoingAnime && ongoingAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-6")
              h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Anime Ongoing
              a(href="/ongoing" class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm") Lihat Semua
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-6 gap-y-8")
              each anime in ongoingAnime.slice(0, 10)
                a(href=`/anime/${anime.slug}` class="group block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300")
                  div(class="relative overflow-hidden rounded-t-lg")
                    img(src=anime.poster alt=anime.title class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-300" onerror="this.onerror=null;this.src='https://placehold.co/400x270?text=No+Image';")
                    if anime.current_episode
                      div(class="absolute top-2 left-2 bg-primary-600 text-white text-xs font-semibold px-2 py-1 rounded-md")= anime.current_episode
                    if anime.newest_release_date
                      div(class="absolute bottom-2 right-2 bg-gray-900/70 text-white text-xs font-semibold px-2 py-1 rounded-md")= anime.newest_release_date
                  div(class="p-4")
                    h3(class="font-bold text-md text-gray-800 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200 line-clamp-2")= anime.title
                    p(class="text-xs text-gray-500 dark:text-gray-400 mt-1")= anime.release_day

        if completeAnime && completeAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-4")
              h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Anime Selesai
              a(href="/complete" class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm") Lihat Semua
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-6 gap-y-8")
              each anime in completeAnime.slice(0, 10)
                a(href=`/anime/${anime.slug}` class="group block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300")
                  div(class="relative overflow-hidden rounded-t-lg")
                    img(src=anime.poster alt=anime.title class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-300" onerror="this.onerror=null;this.src='https://placehold.co/400x270?text=No+Image';")
                    div(class="absolute top-2 left-2 bg-green-600 text-white text-xs font-semibold px-2 py-1 rounded-md") Selesai
                    if anime.rating
                      div(class="absolute bottom-2 right-2 bg-gray-900/70 text-white text-xs font-semibold px-2 py-1 rounded-md flex items-center space-x-1")
                        svg(class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                          path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                        span= anime.rating
                  div(class="p-4")
                    h3(class="font-bold text-md text-gray-800 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200 line-clamp-2")= anime.title

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          section(class="mb-8")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

        div(class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-5")
          h3(class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4") Navigasi Cepat
          div(class="space-y-2")
            a(href="/ongoing" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700/50")
              svg(class="w-5 h-5 mr-3 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700/50")
              svg(class="w-5 h-5 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Selesai
            a(href="/genres" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700/50")
              svg(class="w-5 h-5 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Daftar Genre
            a(href="/search" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700/50")
              svg(class="w-5 h-5 mr-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
              span Cari Anime

        div(class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-5")
          h3(class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4") Dukung Kami
          p(class="text-sm text-gray-600 dark:text-gray-400 mb-4") Jika Anda menikmati layanan kami, pertimbangkan untuk memberikan donasi untuk membantu kami tetap berjalan.
          form(action="/" method="POST" class="flex items-center gap-2" id="donasi")
            input(type="number" name="price" placeholder="min. 1000" class="flex-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500" autocomplete="off" step="1000" min="1000" id="nominal")
            button(type="submit" class="px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors font-semibold") Pay
          if qrcode
            div(class="mt-4 p-4 bg-gray-100 dark:bg-gray-700/50 rounded-lg")
              div(class="flex justify-center items-center")
                div(id="qrcode")
              p(class="text-center text-xs text-gray-500 dark:text-gray-400 mt-2")= `Expired dalam: ${expired}`

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="space-y-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-xl")!= ad.content

block scripts
  script.
    const swiper = new Swiper('.hero-slider', {
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      effect: 'fade',
      fadeEffect: {
        crossFade: true
      },
      on: {
        slideChangeTransitionStart: function () {
          const activeSlide = this.slides[this.activeIndex];
          const animatedElements = activeSlide.querySelectorAll('.animate-fade-in-up');
          animatedElements.forEach(el => {
            el.classList.remove('opacity-0');
          });
        },
        slideChangeTransitionEnd: function () {
          const prevSlide = this.slides[this.previousIndex];
          const animatedElements = prevSlide.querySelectorAll('.animate-fade-in-up');
          animatedElements.forEach(el => {
            el.classList.add('opacity-0');
          });
        }
      }
    });

    const qrcode = #{"'" + qrcode+ "'"} ;
    console.log(qrcode);

    if(qrcode){
      new QRCode(document.getElementById('qrcode'), {text: qrcode, width: 180, height: 180, colorDark: "#000000",colorLight: "#ffffff"})
    }

    document.getElementById('donasi').addEventListener("submit", function (e) {
      const nominal = document.getElementById('nominal').value;
      if(nominal < 1000){
        document.getElementById('nominal').value = 10000;
      }
    });
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.src = img.dataset.src;
            img.classList.remove('lazy');
            imageObserver.unobserve(img);
          }
        });
      });

      document.querySelectorAll('img[data-src]').forEach(img => {
        imageObserver.observe(img);
      });
    }

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
