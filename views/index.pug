block content
  div(class="container mx-auto px-4 py-6")
    if ongoingAnime && ongoingAnime.length > 0
      section(class="mb-8")
        div(class="swiper-container h-64 md:h-80 rounded-2xl shadow-lg overflow-hidden")
          div(class="swiper-wrapper")
            each anime in ongoingAnime.slice(0, 3)
              div(class="swiper-slide relative")
                img(src=anime.poster alt=anime.title class="w-full h-full object-cover")
                div(class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent")
                div(class="absolute bottom-0 left-0 right-0 p-6 text-white")
                  h2(class="text-2xl font-bold line-clamp-2")= anime.title
                  if anime.current_episode
                    p(class="text-sm opacity-80")= `Episode ${anime.current_episode}`
                  a(href=`/anime/${anime.slug}` class="mt-4 inline-block bg-primary-600 hover:bg-primary-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors") Tonton Sekarang
          div(class="swiper-pagination")
          div(class="swiper-button-next text-white")
          div(class="swiper-button-prev text-white")

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if ongoingAnime && ongoingAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-6")
              h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Anime Ongoing Terbaru
              a(href="/ongoing" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium flex items-center transition-colors duration-200")
                span Lihat Semua
                svg(class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4")
              each anime in ongoingAnime.slice(0, 10)
                div(class="anime-card group relative")
                  a(href=`/anime/${anime.slug}`)
                    div(class="relative bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl overflow-hidden transform transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-gray-700")
                      div(class="relative overflow-hidden h-48 md:h-64")
                        img(src=anime.poster alt=anime.title class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=No+Image';")
                        div(class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent")
                      div(class="p-3")
                        h3(class="font-semibold text-sm text-gray-800 dark:text-gray-100 line-clamp-2 mb-1")= anime.title
                        if anime.current_episode
                          p(class="text-xs text-gray-500 dark:text-gray-400")= `Episode ${anime.current_episode}`

        if completeAnime && completeAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-6")
              h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Anime Complete Terbaru
              a(href="/complete" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium flex items-center transition-colors duration-200")
                span Lihat Semua
                svg(class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4")
              each anime in completeAnime.slice(0, 10)
                div(class="anime-card group relative")
                  a(href=`/anime/${anime.slug}`)
                    div(class="relative bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl overflow-hidden transform transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-gray-700")
                      div(class="relative overflow-hidden h-48 md:h-64")
                        img(src=anime.poster alt=anime.title class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=No+Image';")
                        div(class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent")
                      div(class="p-3")
                        h3(class="font-semibold text-sm text-gray-800 dark:text-gray-100 line-clamp-2 mb-1")= anime.title
                        if anime.rating
                          div(class="flex items-center text-xs text-gray-500 dark:text-gray-400")
                            svg(class="w-3 h-3 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                              path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                            span(class="ml-1")= anime.rating

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          section(class="mb-8")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

        div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 mb-6 border border-gray-100 dark:border-gray-700 transition-colors duration-300")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center")
            svg(class="w-5 h-5 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z")
            span Menu Cepat
          div(class="space-y-3")
            a(href="/ongoing" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime
            a(href="/search" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
              span Pencarian Anime

        div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 mb-6 border border-gray-100 dark:border-gray-700 transition-colors duration-300")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center")
            svg(class="w-5 h-5 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
            span Donasi ANIMAQU
          div(class="flex flex-col gap-4 items-center w-full")
            form(action="/" method="POST" class="flex items-center gap-3 w-full max-w-md" id="donasi")
              input(type="number" name="price" placeholder="Masukan nominal" class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200" autocomplete="off" step="1000" min="1000" id="nominal")
              button(type="submit" class="p-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200") Pay
            if qrcode
              div(class="flex justify-center items-center p-4 bg-white rounded-2xl shadow-md w-full max-w-md")
