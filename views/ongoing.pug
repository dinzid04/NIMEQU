extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="relative bg-gradient-to-r from-primary-600 to-primary-800 dark:from-primary-700 dark:to-primary-900 rounded-2xl p-8 md:p-12 mb-8 text-white shadow-lg overflow-hidden")
      div(class="absolute inset-0 bg-black/20")
      div(class="relative z-10")
        h1(class="text-3xl md:text-4xl font-bold mb-2") Ongoing Anime
        p(class="text-lg opacity-90") Freshly released episodes, just for you.

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if animeList && animeList.length > 0
          div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-8")
            each anime in animeList
              include ./_partials/anime-card.pug

          if pagination && pagination.last_visible_page > 1
            include ./_partials/pagination.pug
        else
          div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
            p(class="text-xl font-medium text-gray-900 dark:text-gray-100") No ongoing anime found.

      div(class="lg:col-span-1")
        include ./_partials/sidebar.pug