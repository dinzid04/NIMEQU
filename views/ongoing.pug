extends layout

block content
  div(class="bg-gray-100 dark:bg-gray-900")
    div(class="container mx-auto px-4 py-8")
      header(class="mb-8 text-center")
        h1(class="text-4xl font-bold text-gray-900 dark:text-white mb-2") Anime Ongoing
        p(class="text-lg text-gray-600 dark:text-gray-400") Episode terbaru dari seri anime favoritmu.

      if animeList && animeList.length > 0
        div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-6 gap-y-8 mb-8")
          each anime in animeList
            a(href=`/anime/${anime.slug}` class="group block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300")
              div(class="relative overflow-hidden rounded-t-lg")
                img(src=anime.poster alt=anime.title class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-300" onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=No+Image';")
                if anime.current_episode
                  div(class="absolute top-2 left-2 bg-primary-600 text-white text-xs font-semibold px-2 py-1 rounded-md")= anime.current_episode
                if anime.newest_release_date
                  div(class="absolute bottom-2 right-2 bg-gray-900/70 text-white text-xs font-semibold px-2 py-1 rounded-md")= anime.newest_release_date
              div(class="p-4")
                h3(class="font-bold text-md text-gray-800 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200 line-clamp-2")= anime.title
                p(class="text-xs text-gray-500 dark:text-gray-400 mt-1")= anime.release_day

        if pagination && pagination.last_visible_page > 1
          nav(class="flex justify-center items-center space-x-4")
            a(href=`/ongoing?page=${pagination.current_page - 1}` class=`px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-800 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 ${pagination.current_page === 1 ? 'opacity-50 cursor-not-allowed' : ''}`) Sebelumnya

            div(class="hidden md:flex items-center space-x-2")
              - const pageRange = 3
              - let startPage = Math.max(1, pagination.current_page - pageRange)
              - let endPage = Math.min(pagination.last_visible_page, pagination.current_page + pageRange)

              if startPage > 1
                a(href="/ongoing?page=1" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700") 1
                if startPage > 2
                  span(class="px-4 py-2 text-sm font-medium text-gray-500") ...

              each page in Array.from({length: endPage - startPage + 1}, (_, i) => startPage + i)
                a(href=`/ongoing?page=${page}` class=`px-4 py-2 text-sm font-medium rounded-lg ${page === pagination.current_page ? 'text-white bg-primary-600 border border-primary-600' : 'text-gray-700 bg-white border border-gray-300 hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700'}`)= page

              if endPage < pagination.last_visible_page
                if endPage < pagination.last_visible_page - 1
                  span(class="px-4 py-2 text-sm font-medium text-gray-500") ...
                a(href=`/ongoing?page=${pagination.last_visible_page}` class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700")= pagination.last_visible_page

            a(href=`/ongoing?page=${pagination.next_page}` class=`px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-800 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 ${!pagination.has_next_page ? 'opacity-50 cursor-not-allowed' : ''}`) Selanjutnya

      else
        div(class="text-center py-16")
          svg(class="w-20 h-20 text-gray-400 dark:text-gray-500 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
          h3(class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-2") Yah, Kosong!
          p(class="text-gray-500 dark:text-gray-400") Sepertinya belum ada anime ongoing yang bisa ditampilkan saat ini.

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content

        div(class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 mb-6 border border-gray-100 dark:border-gray-700 transition-colors duration-300")
          h3(class="font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center")
            svg(class="w-5 h-5 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z")
            span Menu Cepat
          div(class="space-y-3")
            a(href="/" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
              span Beranda
            a(href="/complete" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 dark:bg-gray-800 rounded-2xl shadow-lg transition-colors duration-300")!= ad.content
