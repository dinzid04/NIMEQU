extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="bg-gradient-to-r from-gray-800 to-gray-900 rounded-2xl p-8 md:p-12 mb-8 text-white shadow-lg")
      h1(class="text-3xl md:text-4xl font-bold mb-2") Search Anime
      p(class="text-lg opacity-90") Find your favorite anime.
      form(action="/search" method="GET" class="mt-6")
        div(class="flex")
          input(
            type="text"
            name="q"
            placeholder="Enter anime title..."
            value=keyword || ""
            class="flex-1 px-4 py-3 border border-gray-700 rounded-l-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent bg-gray-700 text-white"
            required
          )
          button(
            type="submit"
            class="px-6 py-3 bg-primary-600 text-white rounded-r-lg hover:bg-primary-700 transition-colors font-medium"
          ) Search

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if keyword && searchResults
          if searchResults.length > 0
            div(class="mb-6")
              p(class="text-gray-600 dark:text-gray-300") Found #{searchResults.length} results for "#{keyword}"
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-8")
              each anime in searchResults
                include ./_partials/anime-card.pug

            if pagination && pagination.last_visible_page > 1
              include ./_partials/pagination.pug
          else
            div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
              p(class="text-xl font-medium text-gray-900 dark:text-gray-100") No results found for "#{keyword}".
        else if !keyword
          div(class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg")
            p(class="text-xl font-medium text-gray-900 dark:text-gray-100") Search for your favorite anime.

      div(class="lg:col-span-1")
        include ./_partials/sidebar.pug